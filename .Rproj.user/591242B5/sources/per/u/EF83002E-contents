par_names <- c("q_a",  "q_b",  "q_c",
               "r_aa", "r_bb", "r_cc",
               "r_ab", "r_ac", "r_cb")

utility <- function(a, b, c, pars)
  with(pars,
       q_a*a + q_b*b + q_c*c +
         r_aa*a^2 + r_bb*b^2 + r_cc*c^2 +
         r_ab*a*b + r_ac*a*c + r_bc*b*c)

cje_prep <- function(df, a, b, c)
  df |>
  mutate(
    !!paste0(a, "_2") := (!!as.name(a))^2,
    !!paste0(b, "_2") := (!!as.name(b))^2,
    !!paste0(c, "_2") := (!!as.name(c))^2
  )
